<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PayPayTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TextInputLayoutGreyStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="hintTextAppearance">@style/FloatingHintTextStyle</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:padding">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextAppearance">@style/FloatingHintTextStyle</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
    </style>

    <style name="FloatingHintTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>